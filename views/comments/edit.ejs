<%- include ('../partials/header') %>


<div class="container-lg">
    <div class="text-center"><h1>Edit Comment</h1></div>
    
    <div class="p-5"> 
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="mb-3 form-group">
                <input type="text" class="form-control" name="comment[text]" value="<%= comment.text %>">
            </div>
            <button type="submit" class="btn btn-outline-info btn-lg">Add comment</button>
        </form>
    </div>
    
</div>


